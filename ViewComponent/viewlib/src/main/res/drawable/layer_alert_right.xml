<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="0dp"
        >
        <shape>
            <corners android:bottomRightRadius="6dp"/>
            <solid android:color="@color/white"/>
            <stroke
                android:width="0.1dp"
                android:color="@color/grey_line"/>
        </shape>
    </item>
    <item
        android:top="-2dp"
        android:left="-2dp"
        android:right="0dp"
        android:bottom="0dp"
        >
        <shape>
            <corners android:bottomRightRadius="6dp"/>
            <stroke
                android:width="0.5dp"
                android:color="@color/gray"/>
        </shape>
    </item>
</layer-list>